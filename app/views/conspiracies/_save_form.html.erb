<%= simple_form_for chat.conspiracy do |f| %>
  <%= hidden_field_tag :chat_id, chat.id %>
  <% if chat.conspiracy.content.nil? %>
    <%= f.button :submit, 'Confirm content', class: 'btn btn-primary', id: 'save' %>
  <% else %>
    <%= f.button :submit, 'Confirm title', class: 'btn btn-primary', id: 'save' %>
  <% end %>
<% end %>
