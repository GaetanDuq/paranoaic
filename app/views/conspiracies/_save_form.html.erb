<%= simple_form_for chat.conspiracy, html: {
      data: {
        controller: "alert",
        alert_icon_value: "warning",
        alert_title_value: "Are your sure?",
        alert_html_value: "You won't be able to edit it later",
        alert_confirm_button_text_value: "All good!",
        alert_show_cancel_button_value: true,
        alert_cancel_button_text_value: "Cancel",
        action: "submit->alert#initSweetalert",
        turbo: false
      } } do |f| %>
  <%= hidden_field_tag :chat_id, chat.id %>
  <% if chat.conspiracy.content.nil? %>
    <%= f.button :submit, '✅ Confirm content', class: 'btn btn-success w-100', id: 'save' %>
  <% else %>
    <%= f.button :submit, '✅ Confirm title', class: 'btn btn-success w-100', id: 'save' %>
  <% end %>
<% end %>
