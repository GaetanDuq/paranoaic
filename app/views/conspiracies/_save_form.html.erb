<%= simple_form_for chat.conspiracy, html: {
      data: {
        controller: "alert",
        alert_icon_value: "warning",
        alert_title_value: "Are your sure?",
        alert_html_value: "Create new post.",
        confirm_button_text_value: "All good!",
        show_cancel_button_value: true,
        cancel_button_text_value: "Cancel",
        action: "submit->alert#initSweetalert",
        turbo: false
      } } do |f| %>
  <%= hidden_field_tag :chat_id, chat.id %>
  <% if chat.conspiracy.content.nil? %>
    <%= f.button :submit, 'Confirm content', class: 'btn btn-primary', id: 'save' %>
  <% else %>
    <%= f.button :submit, 'Confirm title', class: 'btn btn-primary', id: 'save' %>
  <% end %>
<% end %>
